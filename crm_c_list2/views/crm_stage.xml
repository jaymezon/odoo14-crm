<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_stage_view_form" model="ir.ui.view">
        <field name="name">crm.stage.form</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm_checklist.crm_stage_view_form"/>
        <field name="arch" type="xml">
            <field name="default_crm_check_list_ids" position="replace">
                <field name="default_crm_check_list_ids">
                    <tree editable="bottom">
                        <field name="sequence" widget="handle"/>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="days_to_complete"/>
                        <field name="group_ids" widget="many2many_tags"/>
                        <field name="should_be_reset"/>
                    </tree>
                </field>
            </field>
        </field>
    </record>

</odoo>