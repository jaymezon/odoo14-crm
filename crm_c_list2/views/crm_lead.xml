<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_lead_view_form_opportunity" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm_checklist.crm_lead_view_form_opportunity"/>
        <field name="arch" type="xml">
            <field name="check_list_line_ids" position="replace">
                <field name="check_list_line_ids"
                    widget="many2many_checkboxes"
                    readonly="1"
                    domain="[('crm_stage_st_id', '=', stage_id)]"
                    nolabel="1"
                    class="oe_inline"/>
            </field>
        </field>
    </record>

</odoo>